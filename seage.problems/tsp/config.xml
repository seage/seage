<?xml version="1.0" encoding="UTF-8"?>

<config  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://xml.seage.org/schema'
   xsi:schemaLocation='http://xml.seage.org/schema config.xsd'>

    <problem problemName="TSP" runAlgorithmId="SimulatedAnnealing">
        <instance name="eil51" path="data/eil51.tsp"/>
        <visualizer outPath="output/eil51.png" width="800" height="600"/>
    </problem>

    <algorithm id="GeneticAlgorithm">
        <geneticAlgorithm 
            numSolution="100"
            iterationCount="100"
            crossLengthPct="40"
            eliteSubjectPct="10"
            mutateSubjectPct="5"
            mutateLengthPct="10"
            randomSubjectPct="2"/>
    </algorithm>

    <algorithm id="TabuSearch">
        <tabuSearch
            numIteration="1000"
            numIterDivers="1"
            numSolution="1"
            tabuListLength="30"/>
    </algorithm>

    <algorithm id="SimulatedAnnealing">
        <simulatedAnnealing
            annealCoeficient="0.99"
            initSolutionType="sorted"
            maxInnerIterations="200"
            maxTemperature="1000"
            minTemperature="0.10"
            numInnerSuccesses="20"/>
    </algorithm>

</config>
