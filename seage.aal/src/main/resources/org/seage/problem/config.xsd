<?xml version="1.0" encoding="UTF-8"?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://xml.seage.org/schema"
    xmlns:tns="http://xml.seage.org/schema"
    elementFormDefault="qualified">
    <xsd:element name="config">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="problem">
                    <xsd:complexType>
                        <xsd:sequence>
                            <xsd:element name="instance">
                                <xsd:complexType>
                                        <xsd:sequence/>
                                            <xsd:attribute name="name" type="tns:nonEmptyString"/>
                                            <xsd:attribute name="path" type="tns:nonEmptyString"/>
                                    </xsd:complexType>
                            </xsd:element>
                            <xsd:element name="visualizer">
                                <xsd:complexType>
                                        <xsd:sequence/>
                                            <xsd:attribute name="outPath" type="tns:nonEmptyString"/>
                                            <xsd:attribute name="width" type="xsd:unsignedInt"/>
                                            <xsd:attribute name="height" type="xsd:string"/>
                                    </xsd:complexType>
                            </xsd:element>
                        </xsd:sequence>
                        <xsd:attribute name="problemName" type="tns:nonEmptyString"/>
                        <xsd:attribute name="runAlgorithm" type="tns:nonEmptyString"/>
                    </xsd:complexType>
                </xsd:element>
                <xsd:element ref="tns:algGeneticAlgorithm"/>
                <xsd:element ref="tns:algTabuSearch"/>
                <xsd:element ref="tns:algSimulatedAnnealing"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:simpleType name="nonEmptyString">
        <xsd:restriction base="xsd:string">
            <xsd:minLength value="2"/>
            <xsd:whiteSpace value="preserve"/>
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:complexType name="algGeneticAlgorithmType">
        <xsd:complexContent>
            <xsd:extension base="tns:algorithmType">
                <xsd:sequence/>
                <xsd:attribute name="numSolution" type="xsd:unsignedInt"/>
                <xsd:attribute name="iterationCount" type="xsd:unsignedInt"/>
                <xsd:attribute name="crossLengthPct" type="xsd:unsignedByte"/>
                <xsd:attribute name="eliteSubjectPct" type="xsd:unsignedByte"/>
                <xsd:attribute name="mutateSubjectPct" type="xsd:unsignedByte"/>
                <xsd:attribute name="mutateLengthPct" type="xsd:unsignedByte"/>
                <xsd:attribute name="randomSubjectPct" type="xsd:unsignedByte"/>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <xsd:element name="algGeneticAlgorithm" type="tns:algGeneticAlgorithmType"></xsd:element>
    <xsd:complexType name="algorithmType"></xsd:complexType>
    <xsd:complexType name="algTabuSearchType">
        <xsd:complexContent>
            <xsd:extension xmlns:tns="http://xml.seage.org/schema" base="tns:algorithmType">
                <xsd:sequence/>
                <xsd:attribute name="numIteration" type="xsd:unsignedInt"/>
                <xsd:attribute name="tabuListLength" type="xsd:unsignedInt"/>
                <xsd:attribute name="numSolution" type="xsd:unsignedInt"/>
                <xsd:attribute name="numIterDivers" type="xsd:unsignedInt"/>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <xsd:complexType name="algSimulatedAnnealingType">
        <xsd:complexContent>
            <xsd:extension base="tns:algorithmType">
                <xsd:sequence/>
                <xsd:attribute name="maxTemperature" type="xsd:double"/>
                <xsd:attribute name="minTemperature" type="xsd:double"/>
                <xsd:attribute name="annealCoeficient" type="xsd:double"/>
                <xsd:attribute name="maxInnerIterations" type="xsd:unsignedInt"/>
                <xsd:attribute name="numInnerSuccesses" type="xsd:unsignedInt"/>
                <xsd:attribute name="initSolutionType" type="xsd:string">
<!--                    <xsd:simpleType>
                        <xsd:restriction base="xsd:string">
                          <xsd:enumeration value="greedy"/>
                          <xsd:enumeration value="random"/>
                          <xsd:enumeration value="sorted"/>
                        </xsd:restriction>
                    </xsd:simpleType>-->
                </xsd:attribute>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>
    <xsd:element name="algTabuSearch" type="tns:algTabuSearchType"></xsd:element>
    <xsd:element name="algSimulatedAnnealing" type="tns:algSimulatedAnnealingType"></xsd:element>
</xsd:schema>







