<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org</groupId>
	<artifactId>seage</artifactId>
	<version>0.8.0-SNAPSHOT</version>
	<name>seage</name>
	<packaging>pom</packaging>

	<modules>
		<module>seage-aal</module>
		<module>seage-misc</module>
		<module>seage-metaheuristics</module>
		<module>seage-experimenter</module>
		<module>seage-problems/discrete/tsp</module>
		<module>seage-problems/discrete/qap</module>
		<module>seage-problems/discrete/sat</module>
		<module>seage-problems/discrete/jssp</module>
		<module>seage-launcher</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2</version>
				<inherited>true</inherited>
				<configuration>
					<executable>java</executable>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4.1</version>
				<inherited>false</inherited>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0</version>
			</plugin>
			<!-- <plugin> <artifactId>maven-surefire-plugin</artifactId> <version>2.14</version> 
				<configuration> <systemProperties> <property> <name>java.util.logging.config.file</name> 
				<value>${basedir}/debug-logging.properties</value> </property> </systemProperties> 
				</configuration> </plugin> -->
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>seage-maven-repo</id>
			<url>http://www.seage.org/maven-repo</url>
		</repository>
	</repositories>
	<scm>
		<connection>scm:git:git@github.com:seage/seage.git</connection>
		<url>scm:git:git://github.com/seage/seage.git</url>
		<developerConnection>scm:git:git@github.com:seage/seage.git</developerConnection>
	</scm>
</project>
