<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Chsqldbonfig 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
     <typeAlias type="net.rickq.fileindex.FileInfo" alias="experiment"/>
     <typeAlias type="net.rickq.fileindex.ScanInfo" alias="experimentTask"/>
  </typeAliases>  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.postgresql.Driver"/>
        <property name="url" value="${url}"/>
        <property name="username" value="test"/>
        <property name="password" value="test"/>
      </dataSource>
    </environment>
    <environment id="test">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value="jdbc:hsqldb:file:/tmp/fileindex.test.db;sql.syntax_pgs=true;check_props=true"/>
        <property name="username" value="SA"/>
        <property name="password" value=""/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="net/rickq/fileindex/db/mappers/FileInfoMapper.xml" />
    <mapper resource="net/rickq/fileindex/db/mappers/ScanInfoMapper.xml" />
  </mappers>
</configuration>